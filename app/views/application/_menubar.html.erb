        <div class='A_TextM A_TextMNone <%= "A_TextMActive" if current_page?(collections_path) %>'>
          <svg xmlns="http://www.w3.org/2000/svg" width="8" height="8" viewBox="0 0 8 8" fill="none" class='Q_roundElement Q_roundElementLeft'>
