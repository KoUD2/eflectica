<div class='form'>
  <%= form_with(model: effect, local: true, html: { multipart: true }) do |form| %>
    <% if effect.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(effect.errors.count, "error") %> prohibited this effect from being saved:</h2>

        <ul>
          <% effect.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :name, style: "display: block" %>
      <%= form.text_field :name %>
    </div>

    <div>
      <%= form.label :description, style: "display: block" %>
      <%= form.text_area :description %>
    </div>

    <div>
      <%= form.label :speed, style: "display: block" %>
      <%= form.number_field :speed %>
    </div>

    <div>
      <%= form.label :platform, style: "display: block" %>
      <%= form.text_area :platform %>
    </div>

    <div>
      <%= form.label :manual, style: "display: block" %>
      <%= form.text_area :manual %>
    </div>

    <div>
      <%= form.label :link_to, style: "display: block" %>
      <%= form.text_field :link_to %>
    </div>
    
    <div>
      <%= form.label :img, style: "display: block" %>
      <%= form.file_field :img %>
    </div>

    <div>
      <%= form.label :tag_list, "Выберите теги:", style: "display: block" %>
      <%= form.select :tag_list, Effect::ALLOWED_TAGS, {}, multiple: true, class: "form-control", selected: effect.tag_list %>
    </div>    
    
    <div>
      <%= form.submit %>
    </div>
  <% end %>
</div>
