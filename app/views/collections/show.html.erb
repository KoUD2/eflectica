<p style="color: green"><%= notice %></p>

<%
  set_meta_tags(
    title: @collection.name,
    description: @collection.description,
    keywords: "коллекции эффектов, коллекции пресетов"
  )
%>

<h1><%= @collection.name %></h1>

<div>
  Tags: <%= @collection.tag_list %>
</div>

<div class='userInfo'>
  <p><%= @collection.description %></p>
  <p><strong>Created by:</strong> <%= @collection.user.username %></p>
</div>

<div id="collections">
  <% @effects.each do |effect| %>
    <%= render effect %>
  <% end %>
</div>

<div class='userInfo'>
  <% if @collection.user_id == current_user.id || current_user.is_admin? %>
    <%= link_to "Редактировать", edit_collection_path(@collection) %>
    <%= button_to "Удалить", @collection, method: :delete %>
  <% end %>
</div>
